rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    function isImage() {
      return request.resource != null &&
             request.resource.contentType.matches('image/.*');
    }

    // ---------- User Avatars ----------
    match /users/{uid}/avatars/{file} {
      // Anyone can read avatars (optional); only owner can upload
      allow read: if true;
      allow write: if isOwner(uid) && isImage() && request.resource.size < 5 * 1024 * 1024; // 5 MB max
    }

    // ---------- Project Images ----------
    match /users/{uid}/projects/{file} {
      allow read: if true;
      allow write: if isOwner(uid) && isImage() && request.resource.size < 10 * 1024 * 1024; // 10 MB max
    }

    // ---------- Project Log Images ----------
    match /users/{uid}/projects/{projectId}/logs/{file} {
      allow read: if true;
      allow write: if isOwner(uid) && isImage() && request.resource.size < 10 * 1024 * 1024;
    }

    // ---------- Default Deny ----------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
